<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="vertical" 
    android:background="@android:color/holo_blue_light">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        >
        
        <TextView
	        android:id="@+id/txtRecallAmuontOfHour"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="09"
	        android:textSize="30sp"
	        android:textColor="@android:color/holo_blue_light" 
	        android:textStyle="bold"
	        android:background="@android:drawable/editbox_background"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : " 
            android:textSize="30sp"
	        android:textColor="@android:color/holo_blue_light"
	        android:textStyle="bold"/>
        
        <TextView
	        android:id="@+id/txtRecallAmuontOfMinute"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="30"
	        android:textSize="30sp" 
	        android:textColor="@android:color/holo_blue_light" 
	        android:textStyle="bold"
	        android:background="@android:drawable/editbox_background"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:background="@android:color/white"
        android:src="@drawable/divider_listview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dp">
            
            <TextView
	    	    android:id="@+id/txtRecallHour"
	    	    android:layout_width="55dp"
	    	    android:layout_height="30dp"
	    	    android:gravity="center_vertical"
	    	    android:text="Hour" />
			
            <SeekBar
	    	    android:id="@+id/sbrRecallHour"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:max="23"
	    	    android:progress="9" />
            
        </LinearLayout>

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" 
    	    android:layout_marginTop="10dp"
    	    >
    	
    	    <TextView
		        android:id="@+id/txtRecallMinute"
		        android:layout_width="55dp"
		        android:layout_height="30dp"
		        android:gravity="center_vertical"
		        android:text="Minutes" />
    	    
    	    <SeekBar
	    	    android:id="@+id/sbrRecallMinute"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:max="59"
	    	    android:progress="30"
	    	    />
    	    
    	</LinearLayout>
    
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:src="@drawable/divider_listview" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:background="@android:color/white"
	    >
    	
	    <ImageButton
		    android:id="@+id/btnRecallLater"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:textStyle="bold" 
		    android:background="@android:color/white"
		    android:src="@android:drawable/ic_menu_recent_history"/>
	    
	</LinearLayout>

</LinearLayout>
